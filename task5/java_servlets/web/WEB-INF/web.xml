<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

   <!--StatusServlet -->
    <servlet>
        <servlet-name>statusServlet</servlet-name>
        <servlet-class>com.bsu.StatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>statusServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>

    <!--NameServlet -->
    <servlet>
        <servlet-name>nameServlet</servlet-name>
        <servlet-class>com.bsu.NameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>nameServlet</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>

    <!--CheckServlet -->
    <servlet>
        <servlet-name>checkServlet</servlet-name>
        <servlet-class>com.bsu.CheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>

    <!--PageServlet -->
    <servlet>
        <servlet-name>pageServlet</servlet-name>
        <servlet-class>com.bsu.PageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pageServlet</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>

    <!--Test1Servlet -->
    <servlet>
        <servlet-name>test1Servlet</servlet-name>
        <servlet-class>com.bsu.Test1Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>test1Servlet</servlet-name>
        <url-pattern>/test1</url-pattern>
    </servlet-mapping>

    <!--Test2Servlet -->
    <servlet>
        <servlet-name>test2Servlet</servlet-name>
        <servlet-class>com.bsu.Test2Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>test2Servlet</servlet-name>
        <url-pattern>/test2</url-pattern>
    </servlet-mapping>

</web-app>